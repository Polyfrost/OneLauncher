{

	"compilerOptions": {
		"target": "ES2022",
		"jsx": "react-jsx",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"baseUrl": ".",
		"module": "ESNext",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["vite/client"],
		"allowImportingTsExtensions": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmit": true,
		"verbatimModuleSyntax": true,

		/* Linting */
		"skipLibCheck": true,
		"noUncheckedSideEffectImports": true
	},
	"include": ["**/*.ts", "**/*.tsx", "vite.config.ts", "../../../packages/web_common/src/utils/error.ts"]
}
